<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="event_form">
        <%= render 'shared/event_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Event Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="glass">
  <div class="jumbotron">
    <h1>Private Events</h1>
    <h2>
	   Start your very own private event.
    </h2>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>
<% end %>